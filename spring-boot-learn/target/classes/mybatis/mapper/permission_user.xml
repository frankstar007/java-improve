<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.frankstar.springboot.permission.dao.UserDao">

  <!-- 包含角色信息的map -->
  <resultMap type="com.frankstar.springboot.permission.enity.UserEntity" id="UserLoginMap">
    <id property="id" column="id"/>
    <result property="userId" column="user_id"/>
    <result property="login" column="login"/>
    <result property="password" column="password"/>
    <result property="userName" column="username"/>
    <result property="address" column="address"/>
    <result property="job" column="job"/>
    <result property="groupId" column="group_id"/>
    <result property="birthday" column="birthday"/>
    <result property="cityId" column="city_id"/>
    <result property="cityName" column="city_name"/>
    <result property="district" column="district"/>
    <result property="province" column="province"/>
    <result property="streetAddress" column="street_address"/>
    <result property="state" column="state"/>
    <result property="type" column="type"/>
    <result property="lastLoginDate" column="last_login_date"/>
    <result property="addTime" column="add_time"/>
    <result property="updateTime" column="update_time"/>
  </resultMap>

  <sql id="baseColumn">
    id, user_id, login, password, username, address, job, group_id, birthday, city_id, city_name, district, province, street_address, state, type, last_login_date, add_time, update_time
  </sql>

  <!-- 根据账号来获取用户信息 -->
  <select id="findByUserLogin" resultMap="UserLoginMap">
    SELECT baseColumn FROM frankstart_user
    WHERE user_id = #{userId}
    AND login = #{login}
  </select>

</mapper>